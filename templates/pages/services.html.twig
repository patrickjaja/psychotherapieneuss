{% extends 'base.html.twig' %}

{% block title %}Leistungen - Psychotherapie Neuss{% endblock %}

{% block content %}
<section class="py-12 bg-gradient-to-b from-primary/10 to-white">
    <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-center mb-8">Leistungen</h1>
    </div>
</section>

<section class="py-16">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                <div class="h-48 overflow-hidden">
                    <img src="/images/KVT.jpg" alt="Kognitive Verhaltenstherapie" class="w-full h-full object-cover">
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-3">Kognitive Verhaltenstherapie</h3>
                    <p class="text-neutral/80 mb-4">Bewährte Therapieform zur Veränderung unerwünschter Verhaltensweisen und Gedankenmuster</p>
                    <a href="/leistungen/kognitive-verhaltenstherapie" class="text-primary hover:text-primary/80 font-medium inline-flex items-center">
                        Mehr erfahren
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                <div class="h-48 overflow-hidden">
                    <img src="/images/coaching.png" alt="Coaching und Beratung" class="w-full h-full object-cover">
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-3">Coaching und Beratung</h3>
                    <p class="text-neutral/80 mb-4">Unterstützung bei der Erreichung persönlicher und beruflicher Ziele</p>
                    <a href="/leistungen/coaching" class="text-secondary hover:text-secondary/80 font-medium inline-flex items-center">
                        Mehr erfahren
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                <div class="h-48 overflow-hidden">
                    <img src="/images/online_therapie.png" alt="Online-Therapie" class="w-full h-full object-cover">
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-3">Online-Therapie</h3>
                    <p class="text-neutral/80 mb-4">Flexible Therapiesitzungen über sichere Videotelefonie</p>
                    <a href="/leistungen/online-therapie" class="text-accent hover:text-accent/80 font-medium inline-flex items-center">
                        Mehr erfahren
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-12 bg-primary/5">
    <div class="container mx-auto px-4 text-center">
        <h3 class="text-2xl font-bold mb-4">Finden Sie die passende Unterstützung</h3>
        <p class="text-lg mb-6">Gemeinsam finden wir den richtigen Weg für Ihre individuellen Bedürfnisse.</p>
        <a href="/kontakt" class="inline-block bg-primary text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-colors">
            Erstgespräch vereinbaren
        </a>
    </div>
</section>
{% endblock %}
